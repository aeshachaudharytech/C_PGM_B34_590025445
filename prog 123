#include <stdio.h>
#include <ctype.h>

int main() {
    FILE *fp;
    char ch;
    int characters = 0, words = 0, lines = 0;
    int inWord = 0;

    // Open file in read mode
    fp = fopen("sample.txt", "r");
    if (fp == NULL) {
        printf("Error opening file!\n");
        return 1;
    }

    // Read file character by character
    while ((ch = fgetc(fp)) != EOF) {
        characters++; // Count all characters including spaces and newlines

        if (ch == '\n') {
            lines++;
        }

        // Count words
        if (isspace(ch)) {
            inWord = 0; // End of a word
        } else if (!inWord) {
            words++;
            inWord = 1; // Start of a new word
        }
    }

    // If file is not empty and does not end with newline
    if (characters > 0 && ch == EOF) {
        lines++; // Count last line if not counted
    }

    fclose(fp);

    printf("Characters: %d\n", characters);
    printf("Words: %d\n", words);
    printf("Lines: %d\n", lines);

    return 0;
}
